<div id="gallery" class="container-fluid">
	{% for image in images[gallery] %}
	<div class="row">
		<img src="{{ settings.baseUrl }}img/galleries/{{ gallery }}/{{ image.name }}-thumb.jpg" class="img-fluid" alt="{{ image.alt }}">
		<div class="img-overlay">
			<a href="{{ settings.baseUrl }}img/galleries/{{ gallery }}/{{ image.name }}.jpg" class="btn btn-secondary" data-toggle="lightbox" data-gallery="gallery">
				<i class="fas fa-search-plus"></i>View full size
			</a>
		</div>
	</div>
	{% endfor %}
</div>
